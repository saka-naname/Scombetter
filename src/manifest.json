{
    "manifest_version": 3,
    "name": "Scombetter",
    "version": "0.0.1",
    "description": "ScombZの見た目をいい感じに整える拡張機能",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_icon": "icons/16.png",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://scombz.shibaura-it.ac.jp/*"],
            "css": [],
            "js": ["main.js"]
        }
    ],
    "permissions": [
        "storage"
    ]
}